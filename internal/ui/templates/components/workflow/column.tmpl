{{define "components/workflow/column"}}
<section class="column">
  {{template "components/ui/column_header" .Header}}

  {{if .Workflows}}
    <ul class="item-list">
      {{range .Workflows}}
        <li class="list-item">
          <details class="workflow-item">
            <summary class="workflow-summary">
              <span class="item-title">{{.DisplayName}}</span>
              {{if .ID}}
                <button type="button"
                        class="workflow-run-button"
                        data-open-run-modal
                        data-workflow-id="{{.ID}}"
                        data-workflow-display="{{.DisplayName}}"
                        aria-label="Start run for workflow {{.DisplayName}}">
                  Run
                </button>
              {{end}}
            </summary>
            <div class="item-details">
              <p><strong>ID:</strong> {{.ID}}</p>
              {{if .Title}}<p><strong>Title:</strong> {{.Title}}</p>{{end}}
              {{if .Description}}<p><strong>Description:</strong> {{.Description}}</p>{{end}}
              {{if .Message}}<p><strong>Message:</strong> {{.Message}}</p>{{end}}
              {{if .StepNames}}
                <h3>Steps</h3>
                <ul class="detail-list">
                  {{range .StepNames}}<li>{{.}}</li>{{end}}
                </ul>
              {{end}}
            </div>
          </details>
        </li>
      {{end}}
    </ul>
  {{else}}
    <p>No workflows available.</p>
  {{end}}
</section>
{{end}}
