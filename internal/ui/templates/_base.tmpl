{{define "layouts/base"}}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{block "title" .}}Composer{{end}}</title>
  <link rel="stylesheet" href="/static/app.css">
  {{block "head" .}}{{end}}
</head>
<body>
  <div class="app-shell">
    <aside class="app-sidebar">
      {{template "components/navigation/sidebar" .Sidebar}}
    </aside>
    <main class="app-main">
      <div class="app-content">
        {{block "content" .}}{{end}}
      </div>
    </main>
  </div>
  {{block "scripts" .}}{{end}}
</body>
</html>
{{end}}
