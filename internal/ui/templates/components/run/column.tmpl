{{define "components/run/column"}}
<section class="panel">
  {{template "components/ui/column_header" .Header}}
  {{if .Runs}}
    <ul class="panel__list">
      {{range .Runs}}
        <li class="card card--collapsible">
          <details class="collapsible">
            <summary class="collapsible__summary">
              <span class="collapsible__title">{{.DisplayName}}</span>
              <span class="status-badge {{.StateClass}}">{{.StateLabel}}</span>
              {{if .ID}}
                <button type="button"
                        class="button button--primary button--sm run-tick-button"
                        data-run-id="{{.ID}}"
                        data-run-display="{{.DisplayName}}"
                        aria-label="Run tick for {{.DisplayName}}">
                  Tick
                </button>
              {{end}}
            </summary>
            <div class="collapsible__content">
              <p><strong>Run ID:</strong> {{.ID}}</p>
              <p><strong>Workflow:</strong> {{.WorkflowName}}</p>
              {{if .Steps}}
                <h3>Steps</h3>
                <ul class="data-list">
                  {{range .Steps}}
                    <li>
                      <span>{{.Name}}</span>
                      <span class="status-badge {{.StatusClass}}">{{.Status}}</span>
                    </li>
                  {{end}}
                </ul>
              {{end}}
            </div>
          </details>
        </li>
      {{end}}
    </ul>
  {{else}}
    <p>No runs found.</p>
  {{end}}
</section>
{{end}}
