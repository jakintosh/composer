{{define "components/waiting/column"}}
<section class="panel panel--muted">
  {{template "components/ui/column_header" .Header}}
  {{if .Groups}}
    <ul class="panel__list waiting-list">
      {{range .Groups}}
        <li>
          <div class="waiting-group__header">
            <span>{{.RunDisplayName}}</span>
            <span class="waiting-group__divider" aria-hidden="true"></span>
          </div>
          <ul class="waiting-group__tasks">
            {{range .Tasks}}
              <li class="card card--compact waiting-task">
                <div class="waiting-task__name">{{.Name}}</div>
                {{if .Description}}
                  <div class="waiting-task__description">{{.Description}}</div>
                {{end}}
              </li>
            {{end}}
          </ul>
        </li>
      {{end}}
    </ul>
  {{else}}
    <p>No waiting tasks.</p>
  {{end}}
</section>
{{end}}
